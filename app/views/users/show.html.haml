.row.profile
  .col-md-3
    .profile-sidebar
      .profile-userpic
        = image_tag('default_profile.jpg')
      .profile-usertitle
        .profile-usertitle-name
          = @user.name
        .profile-usertitle-job
          = @user.nickname
      .profile-userbuttons
        .btn.btn-success.btn-sm
          Level
          = @user.level
      .profile-usermenu
        %ul.nav
          %li.active
            %a{ href: '#' }
              %i.fa.fa-line-chart
              Activity
          %li
            %a{ href: '#' }
              %i.fa.fa-user
              Profile
          %li
            %a{ href: '#' }
              %i.fa.fa-trophy
              Achievements
          %li
            %a{ href: '#' }
              %i.fa.fa-group
              Teams
  .col-md-9
    .profile-content
      = level_progressbar(@user)
      = area_chart points_per_day_charts_path(user_id: @user.id), label: 'Experience', title: 'Experience gain per day'
