.container
  .jumbotron
    - if user_signed_in?
      %h1 Welcome back, trusted user!
      %p.lead
        You have signed in! Enjoy the Gamification app.
      = link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-large btn-danger'
    - else
      %h1 Welcome, guest!
      %p.lead
        You must sign in or sign up before you can access our super sweet,
        top secret content.
      .row-fluid
        .span6
          = link_to 'Log In', new_user_session_path, class: 'btn btn-success'
        %br
        .span6
          = link_to 'Sign Up', new_user_registration_path, class: 'btn btn-success'
